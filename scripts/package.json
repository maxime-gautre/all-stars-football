{
  "name": "all-stars-football-scripts",
  "description": "Helper project to populate data into databases. It contains standalone scripts to fetch data from football-api and to save it into document-based datastore.",
  "private": true,
  "devDependencies": {
    "@types/faker": "^5.5.1",
    "@types/jest": "^26.0.22",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "mongodb": "^3.6.6"
  },
  "scripts": {
    "lint": "yarn lint:prettify && yarn lint:source && yarn type-check",
    "lint:source": "eslint --ext .ts --max-warnings=0 src",
    "lint:prettify": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "prettify": "prettier --write 'src/**/*.ts'",
    "deps:up": "docker-compose -f docker-compose.deps.yml up",
    "deps:down": "docker-compose -f docker-compose.deps.yml down",
    "test": "jest",
    "execute": "ts-node"
  }
}
